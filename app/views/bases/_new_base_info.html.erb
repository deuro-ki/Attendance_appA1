<% provide(:title, 'New Base Info') %>
<% provide(:class_text, 'new-base-info') %>
<% provide(:button_text, '拠点情報追加') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">✕</span>
      </button>
      <h1 class="modal-title">拠点情報追加</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base, url: bases_path, local: true) do |f| %>
              
              <%= f.label :base_number, "拠点番号", class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :base_number, class: "form-control" %>
              
              <%= f.label :base_name, "拠点名", class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :base_name, class: "form-control" %>
              
              <%= f.label :base_status, "拠点種類", class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :base_status, class: "form-control" %>
              
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-block btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>