<% provide(:title, 'Edit Base Info') %>
<% provide(:class_text, 'edit-base-info') %>
<% provide(:button_text, '更新') %>

  <h1 class="modal-title">拠点情報編集</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base, url: basis_path(@base), local: true, method: :patch) do |f| %>
              
              
            <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_number, class: "form-control" %>
            
            <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_name, class: "form-control" %>
            
            <%= f.label :base_status, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_status, class: "form-control" %>
              
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
